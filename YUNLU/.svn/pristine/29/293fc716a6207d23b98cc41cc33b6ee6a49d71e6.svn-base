            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().Id;
        if ($.checkedArray(keyValue)) {
            $.modalOpen({
                id: "Form",
                title: "结算信息--修改",
                url: "/TN_XM/TN_JS/Form?keyValue=" + keyValue,
                width: "950px",
                height: "750px",
                callBack: function (iframeId) {
                    top.frames[iframeId].submitForm();
                }
            });
            //var parentId = top.$.jfinetab.getCurrentTabId();
            //top.$.jfinetab.addTabContent("/TN_XM/TN_JS/Form?keyValue=" + keyValue, "结算信息--修改", parentId + "_edit", parentId);

        }

    }
    function btn_delete() {
        var keyValue = $("#gridList").jqGridRowValue().Id;
        if ($.checkedArray(keyValue)) {
            $.deleteForm({
                url: "/TN_XM/TN_JS/DeleteForm",
                param: { keyValue: keyValue },
                success: function () {
                    $.currentWindow().$("#gridList").trigger("reloadGrid");
                }
            });
        }

    }
    function btn_details() {
        var keyValue = $("#gridList").jqGridRowValue().Id;
        if ($.checkedArray(keyValue)) {
            $.modalOpen({
                id: "Details",
                title: "结算信息--查看",
                url: "/TN_XM/TN_JS/Details?keyValue=" + keyValue,
                width: "750px",
                height: "720px",
                btn: null,
            });
        }
    }
    function refreshGrid() {
        $("#gridList").trigger("reloadGrid");
    }
