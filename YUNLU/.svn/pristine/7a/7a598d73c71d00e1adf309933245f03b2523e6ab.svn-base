@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form2.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    var tree = $.request("tree");
    $(function () {
        //  $("#ParentName").select2();
        initControl();

        if (!!keyValue) {
            $.ajax({
                url: "/TN_XM/TN_XMBase/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);
                }
            });
        }
    });
    //初始化组件
    function initControl() {
        //项目

        $("#ParentName").bindSelect({
            url: "/TN_XM/TN_XMBase/GetTreeSelectJson",
            defaultContent: "<option value='0'>请选择</option>",
            search: true,
            change: function () {
                var option = $("#ParentName option:selected").text(); //获取选中的项

                $.ajax({
                    url: "/TN_XM/TN_XMBase/GetParentCode",
                    type: "post",
                    data: { "keyValue": option },
                    dataType: "json",
                    success: function (msg) {
                        if (msg.length == 0) {
                            $("#ParentCode").val("");
                        } else {
                            var value = msg[0].Code;
                            $("#ParentCode").val(value);
                        }

                    },
                    error: function () {

                    }
                });
            }
        });

    }
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        var postData = $("#form1").formSerialize();
        $.submitForm({
            url: "/TN_XM/TN_XMBase/SaveForm?keyValue=" + keyValue,
            param: postData,
            success: function () {
                //var parentTabId = top.$.jfinetab.getCurrentTabParentId();
                //top.$.jfinetab.RefreshTabFromId(parentTabId);
                location.reload();

                //top.$.jfinetab.closeCurrentTab();
            }
        })

    }
</script>

<form id="form1">
    <div style="margin: 10px 10px 10px 10px;">
        <table class="form">
            <tr>
                <th class="formTitle" hidden> 主项目编码</th>
                <td class="formValue" hidden>
                    <input id="ParentCode" name="ParentCode" type="text"
                           class="form-control  " readonly />
                </td>       
                <th class="formTitle"> 主项目名称</th>
                <td class="formValue">
                    <select id="ParentName" name="ParentName" class="select2 form-control"></select>
                </td>
            </tr>

            <tr hidden>
                <th class="formTitle">子编码</th>
                <td class="formValue">
                    <input id="Code" name="Code" type="text" value="@ViewBag.Code" readonly
                           class="form-control  required" placeholder="请输入编码" />
                </td>
            </tr>   
            <tr>
                <th class="formTitle"> 子项目名称</th>
                <td class="formValue">
                    <input id="Name" name="Name" type="text"
                           class="form-control  required" placeholder="请输入名称" />
                </td>
            </tr>
            <tr>
                <th class="formTitle"> 项目描述</th>
                <td class="formValue">
                    <input id="DEC" name="DEC" type="text" class="form-control  " />
                </td>
            </tr>

            <tr>
                <th class="formTitle" valign="top" style="padding-top: 5px;">
                    备注
                </th>
                <td class="formValue">
                    <textarea id="Remark" name="Remark" class="form-control" style="height: 60px;"></textarea>
                </td>
            </tr>
        </table>
    </div>
</form>
