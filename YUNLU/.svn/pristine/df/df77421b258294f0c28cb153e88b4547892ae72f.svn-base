@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<script>
    var keyValue = $.request("keyValue");

   
    $(function () {
        gridList();
    })
    function gridList() {
        var $gridList = $("#gridList");
        var queryJson = {};
        queryJson.BindId = keyValue;
        //var sum = $("#sum").val();
        $gridList.dataGrid({
            url: "/TN_XM/TN_FK_MX/GetGridJson3",
            height: $(window).height() - 168,
            colModel: [

					{ label: " 主键", name: "Id", width: 150, align: 'left', hidden: true },

                    { label: " BindId", name: "BindId", width: 150, align: 'left', hidden: true },

                    { label: " 项目编号", name: "ProjectNo", width: 150, align: 'left' },

                    { label: " 项目名称", name: "ProjectName", width: 150, align: 'left' },

					{ label: " 合同号", name: "HTCode", width: 150, align: 'left' },

					{ label: " 合同名称", name: "HTName", width: 150, align: 'left' },

                    //{ label: " 设备包", name: "PaymentCompanyId", width: 150, align: 'left'},

                    { label: " 供应商", name: "PaymentCompany", width: 150, align: 'left' },

                    { label: " 付款金额", name: "PaymentAmount", width: 150, align: 'right' },

                    { label: " 付款日期", name: "PaidDate", width: 150, align: 'left' },

                    { label: " 凭证号", name: "CredentialsNumber", width: 150, align: 'left' },

                    { label: " 付款类型", name: "PayType", width: 150, align: 'left' },

					{ label: " 创建日期", name: "CreateDate", width: 150, align: 'left' },

					{ label: " 创建用户账户", name: "CreateUserId", width: 150, align: 'left', hidden: true },

					{ label: " 创建人", name: "CreateUserName", width: 150, align: 'left' },

					{ label: " 最后修改时间", name: "UpdateDate", width: 150, align: 'left', hidden: true },

					{ label: " 最后修改用户", name: "UpdateUserId", width: 150, align: 'left', hidden: true },

					{ label: " 最后修改用户名称", name: "UpdateUserName", width: 150, align: 'left', hidden: true },

            ],
            pager: "#gridPager",
            sortname: 'CreateDate desc',
            caption: "付款列表",
            viewrecords: true,
            loadComplete: function () {
                var sumValue = $(this).getCol('PaymentAmount', false, 'sum');
                $(this).jqGrid("setCaption", "付款总额:" + sumValue.toFixed(2)+"元"); 
            }
        });
        $("#btn_search").click(function () {
            var queryJson = {
                HTName: $("#HTName").val(),
                PaidDate1: $("#PaidDate1").val(),
                PaidDate2: $("#PaidDate2").val(),
                ProjectName: $("#ProjectName").val()
            }
            $gridList.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) }, page: 1
            }).trigger('reloadGrid');
        });
    }



    //添加发票附件
    function btn_addfj() {
        var keyValue = $("#gridList").jqGridRowValue().Id;
        if ($.checkedArray(keyValue)) {
            //var parentId = top.$.jfinetab.getCurrentTabId();
            //top.$.jfinetab.addTabContent("/TN_XM/TN_CG_CP/DetailsFKFJ?keyValue=" + keyValue, "上传附件", parentId + "_details", parentId);
            $.modalOpen({
                id: "Form",
                title: "上传发票",
                url: "/TN_XM/TN_FJ/Form?keyValue=" + keyValue,
                width: "750px",
                height: "450px",
                btn: null,
                callBack: function (iframeId) {
                    top.frames[iframeId].submitForm();
                }
            });
        }

    }

    //查看发票附件
    function btn_detailsfj() {
        var keyValue = $("#gridList").jqGridRowValue().Id;
        if ($.checkedArray(keyValue)) {
            //var parentId = top.$.jfinetab.getCurrentTabId();
            //top.$.jfinetab.addTabContent("/TN_XM/TN_CG_CP/DetailsFKFJ?keyValue=" + keyValue, "上传附件", parentId + "_details", parentId);
            $.modalOpen({
                id: "Form",
                title: "上传发票",
                url: "/TN_XM/TN_CG_CP/DetailsFKFJ?keyValue=" + keyValue,
                width: "750px",
                height: "450px",
                btn: null,
                callBack: function (iframeId) {
                    top.frames[iframeId].submitForm();
                }
            });
        }
    }


    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增协同任务预算",
            url: "/OECTask/OECTaskPlanD/Form",
            width: "550px",
            height: "570px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().Id;
        if ($.checkedArray(keyValue)) {
            $.modalOpen({
                id: "Form",
                title: "修改协同任务预算",
                url: "/OECTask/OECTaskPlanD/Form?keyValue=" + keyValue,
                width: ($(window).width() * 0.8) + "px",
                height: ($(window).height() * 0.7) + "px",
                callBack: function (iframeId) {
                    top.frames[iframeId].submitForm();
                }
            });
        }

    }
    function btn_delete() {
        var keyValue = $("#gridList").jqGridRowValue().Id;
        if ($.checkedArray(keyValue)) {
            $.deleteForm({
                url: "/TN_XM/TN_FK_MX/DeleteForm2",
                param: { keyValue: keyValue },
                success: function () {
                    refreshGrid();
                    $.currentWindow().$("#gridList").trigger("reloadGrid");
                }
            });
        }

    }
    function btn_details() {
        var keyValue = $("#gridList").jqGridRowValue().Id;
        if ($.checkedArray(keyValue)) {
            $.modalOpen({
                id: "Details",
                title: "查看协同任务预算",
                url: "/OECTask/OECTaskPlanD/Details?keyValue=" + keyValue,
                width: ($(window).width() * 0.8) + "px",
                height: ($(window).height() * 0.7) + "px",
                btn: null,
            });
        }
    }
    function refreshGrid() {
        $("#gridList").trigger("reloadGrid");
    }
</script>

