    function editProduct() {
        $("#myModal").modal({ backdrop: 'static', keyboard: false });
        $('#myModal').modal('show');
        var keyValue = $("#gridList").jqGridRowValue().Id;
        if ($.checkedArray(keyValue)) {
            $("#CPId").val(keyValue);
            $.ajax({
                url: "/TN_XM/TN_FJ/GetFormJson",
