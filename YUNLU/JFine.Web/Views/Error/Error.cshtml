@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>错误页-@ViewBag.number</title>
    <link href="~/Content/css/framework-font.css" rel="stylesheet" />
    <script src="~/Content/js/jquery/jquery-2.0.3.min.js"></script>
    <script src="~/Content/js/bootstrap/bootstrap.min.js"></script>
    <link href="~/Content/js/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/framework-index.css" rel="stylesheet" />
    <link href="~/Content/css/framework-theme.css" rel="stylesheet" />
    <style>
        .wrapper {
            min-height: 100%;
            background-color: #ecf0f5;
            z-index: 800;
        }
        .content {
            min-height: 250px;
            padding: 15px;
            padding-right: 15px;
            padding-left: 15px;
            margin-right: auto;
            margin-left: auto;
            padding-left: 15px;
            padding-right: 15px;
        }
        .error-page > .headline {
            float: left;
            font-size: 100px;
            font-weight: 300;
        }
        .error-page > .error-content {
            margin-left: 190px;
            display: block;
        }
        .copyright {
            text-align: center;
            /*color: #fff;*/
            position: absolute;
            top: 100%;
            margin-top: -60px;
            width: 97%;
            font-family: Microsoft Yahei;
            line-height: 25px;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div>
        <div class="wrapper">
            <div class="container">
                <!--中间内容-->
                <div id="content-wrapper" class="content-wrapper">
                    <section class="content">
                        <div class="error-page">
                            <h2 class="headline text-yellow">@ViewBag.number</h2>
                            <div class="error-content">
                                <h3><i class="fa fa-warning text-yellow"></i> @ViewBag.title</h3>
                                <p>
                                    @ViewBag.message
                                </p>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
        <div class="copyright">
            JFine开发团队出品
        </div>
    </div>
</body>
</html>
