@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form2.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    var windowId = $.request("windowId");//window ID
    var isSingle = $.request("isSingle");//是否单选：1:是；非1：否
    var flag = $.request("flag");//标识调用页面的元素：自行赋值
    var ProjectName = $.request("ProjectName");
    var ContractName = $.request("ContractName");
    var selectedUsers = new Array();

    $(function () {
        gridList();
    });
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/TN_XM/TNRD_TransactionProtocol/GetAvailDeviceList",
            postData: { queryJson: JSON.stringify({ ProjectName: ProjectName, ContractName: ContractName }) },
            height: $(window).height() - 138,
            multiselect: true,
            colModel: [

                { label: "设备编码", name: "DeviceCode", width: 150, align: 'left' },

                { label: "设备名称", name: "DeviceName", width: 150, align: 'left' },

                { label: "规格", name: "Spec", width: 150, align: 'left' },

                { label: "单位", name: "Unit", width: 150, align: 'left' },

                { label: "价格", name: "Price", width: 150, align: 'left' },

                { label: "可用数量", name: "AvailQuantity", width: 150, align: 'left' },

                { label: "金额", name: "Amount", width: 150, align: 'left' },

            ],
            pager: "#gridPager",
            sortname: 'CreateDate desc',
            viewrecords: true
        });
        $("#btn_search").click(function () {
            var queryJson = {
                BindId: !!$("#materialTree").getCurrentNode() ? $("#materialTree").getCurrentNode().id : "",
                keyword: $("#txt_keyword").val()
            }
            $gridList.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) }, page: 1
            }).trigger('reloadGrid');
        });
    }

    //返回所选人员完整信息
    function submitForm() {

        backData();
    }

    //返回完整数据
    function backData() {
        var materialListJson = $("#gridList").jqGridRows();
        if (materialListJson != undefined) {
            if (isSingle == "1") {//单选
                if (materialListJson.length != 1) {
                    $.modalAlert("只能选择一条数据！请重新选择！", "warning");
                    return;
                }
            }
            //每一个调用该模块的必须实现dealSelectedUserFull(account,name,flag)方法
            if (windowId == '') {
                $.currentWindow().dealSelectedDevice(materialListJson, flag);
            } else {
                top.frames[windowId].dealSelectedDevice(materialListJson, flag);
            }
            $.modalClose();
        } else {
            $.modalAlert("请选择数据！", "warning");
        }

    }

</script>

<div class="ui-layout" id="layout" style="height: 100%; width: 100%;">
    <div class="ui-layout-center">
        <div class="topPanel">
            <div class="search">
                <table>
                    <tr>
                        <td>
                            <div class="input-group">
                                <input id="txt_keyword" type="text" class="form-control" placeholder="账户/姓名/手机" style="width: 200px;">
                                <span class="input-group-btn">
                                    <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                                </span>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="gridPanel">
            <table id="gridList"></table>
            <div id="gridPager"></div>
        </div>
    </div>
</div>